%div{:class => "span-24", :style => "text-align:right;"}
  %p.small
    You are logged in as: #{@user.login}
    %a{:href => "/logout"} (logout)

- if @project != nil
  %div{:class => "span-24"}
    %p.caps
      Details
    %p &nbsp;
    %p
      %a{:href => "/projects/#{@project.name}"} #{@project.name}
      &nbsp;|&nbsp; 
      %a{:href => "/projects/#{@project.id}/delete"} (delete this project)
      &nbsp;|&nbsp; 
      = @project.created_at.strftime("Created at %a %m %b %I:%M%p")
      - if @search != nil
        %p{:style => "margin-left: 1em;"}
          = @search.query
          &nbsp;|&nbsp;
          %a{:href => "/projects/#{@project.id}/searches/#{@search.id}/delete"} (delete this search) 
          &nbsp;|&nbsp;
          = @search.created_at.strftime("Created at %a %m %b %I:%M%p")

%div{:class => "span-24"}
  - if flash[:success]
    .success #{flash[:success]}
  - if flash[:notice]
    .notice #{flash[:notice]}
  - if flash[:error]
    .error #{flash[:error]}
    